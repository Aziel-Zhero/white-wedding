rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(coupleId) {
      return isSignedIn() && get(/databases/$(database)/documents/couples/$(coupleId)).data.ownerId == request.auth.uid;
    }

    // Rules for the 'couples' collection
    match /couples/{coupleId} {
      allow read: if true;
      allow write: if isOwner(coupleId);
      allow create: if isSignedIn() && request.resource.data.ownerId == request.auth.uid;

      // Rules for subcollections of a couple
      match /guests/{guestId} {
        allow read: if true;
        allow write: if isOwner(coupleId);
      }

      match /gifts/{giftId} {
        allow read: if true;
        allow write: if isOwner(coupleId); // Allows create, update, delete for the owner
        // Allow anyone to update the contributed amount (for gift contribution)
        allow update: if request.resource.data.diff(resource.data).affectedKeys().hasOnly(['contributedAmount']);
      }
      
      match /rsvps/{rsvpId} {
        allow read: if true; // Allow reading RSVPs, was isOwner(coupleId)
        allow create: if true; // Anyone can RSVP
      }
    }
  }
}
