
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(coupleId) {
      // Ensure the document exists before trying to access its data
      let coupleDoc = get(/databases/$(database)/documents/couples/$(coupleId));
      return isSignedIn() && exists(/databases/$(database)/documents/couples/$(coupleId)) && coupleDoc.data.ownerId == request.auth.uid;
    }
    
    function isNewGiftOwner() {
        // Check if the incoming gift document has an ownerId matching the user
        return request.resource.data.ownerId == request.auth.uid;
    }

    // Rules for the 'couples' collection
    match /couples/{coupleId} {
      allow read: if true;
      allow write: if isOwner(coupleId);
      allow create: if isSignedIn() && request.resource.data.ownerId == request.auth.uid;

      // Rules for subcollections of a couple
      match /guests/{guestId} {
        allow read: if true;
        allow write: if isOwner(coupleId);
      }

      match /gifts/{giftId} {
        allow read: if true;
        allow create: if isSignedIn() && isNewGiftOwner();
        allow update: if isOwner(coupleId) || request.resource.data.diff(resource.data).affectedKeys().hasOnly(['contributedAmount']);
        allow delete: if isOwner(coupleId);
      }
      
      match /rsvps/{rsvpId} {
        allow read: if isSignedIn(); 
        allow create: if true; // Anyone can RSVP
      }
    }
  }
}
